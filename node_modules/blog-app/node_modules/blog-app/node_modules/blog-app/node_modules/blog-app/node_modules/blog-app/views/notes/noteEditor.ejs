<%- include("../partials/header.ejs") %>

<% if (locals.darkmode) { %>
    <div class="card text-white bg-dark" id="note-card">
        <input class="card-header" id="note-name" name="name" value="<%=name%>">
        <div class="card-body">
            <textarea class="card-header" id="note-edit" name="content"><%=content%></textarea>
            <button class="btn btn-dark" type="submit" id="card-save-button">Save</button>
        </div>
    </div>
<% } else { %>
    <div class="card text-white bg-secondary" id="note-card">
        <input class="card-header" id="note-name" name="name" value="<%=name%>">
        <div class="card-body">
            <textarea class="card-header" id="note-edit" name="content"><%=content%></textarea>
            <button class="btn btn-secondary" type="submit" id="card-save-button">Save</button>
        </div>
    </div>
<% } %>

<%- include("../partials/footer.ejs") %>